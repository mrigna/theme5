<h1>Themes </h1>
<% @theme = Theme.find(params[:id]) %>

<p>
  <strong>Title:</strong>
  <%= @theme.metadata.title %>
</p>

<div>
  <strong>Content:</strong>
  <br />
  <hr />
  <%= if @theme.html_content.nil? == false 
      render html: @theme.html_content.html_safe 
  end %>
  </div>
</div>



<%= link_to 'Go back', node_themes_path(@theme.node_id), class: "button round tiny info" %>
<%#= link_to 'Update', theme, id: "edit_link", data: {save_url: mercury_update(@theme)} %>