<% if @title.present? %>
<h1><%= @title %></h1>
   <% if @title == "Simple Search" %>
    <%=  render 'search' %>
   <% end %>
<% else %>
<h1><%= "all" %></h1>
<% end %>  
  
   
<hr/>

<table role="grid">
  <thead>
    <tr>
      <th>Node ID</th>
      <th>Url Tag</th>
      <th>Hidden</th>
      <th>DG</th>
      <th>Number objects</th>
      <th>Link to objects</th>
      
     </tr>
    </thead>
  
    <tbody>    
    <% @node_select.each do |node| %>                      
          <tr>
            <td><%= node.nodeID %></td>
            <td><%= node.url_label %></td>
            <td><%= node.hidden %></td>
            <td><%= node.dg %></td>
            <td><%= Theme.where(node_id: node.id).count %></td>
            <td><%= link_to 'selection', themes_path(node.id) %></td>
          </tr>
    <% end %>
  </tbody>
</table>
<br /> <br/ >
<% if @title == "Node listing" %>
<%= paginate @node_select, :params => {:controller => 'nodes', :action => 'index'} %>
<% end %>