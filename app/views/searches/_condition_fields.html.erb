<div class="field">
  <div class="panel">
  <%= f.attribute_fields do |a| %>
  <%= a.attribute_select associations: [:theme, :metadata] %>
  <% end %>
  
  <%= f.predicate_select only: %i(eq not_eq cont not_cont), compounds: false %>
  <%= f.value_fields do |v| %>
	<%= v.text_field :value %>
  <% end %>
  <%= link_to "Remove conditions", '#', class: ["remove_fields", "button round info"] %>
  
	</div>
</div>